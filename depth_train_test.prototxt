  }
}
layer {
  name: "pool1_R"
  type: "Pooling"
  bottom: "conv1_R"
  top: "pool1_R"
  pooling_param {
    pool: MAX
    kernel_size: 2
    stride: 2
  }
}
layer {
  name: "conv2_R"
  type: "Convolution"
  bottom: "pool1_R"
  top: "conv2_R"
  param {
    name: "conv2_w"
    lr_mult: 1
  }
  param {
    name: "conv2_b"
    lr_mult: 2
  }
  convolution_param {
    num_output: 64
    kernel_size: 5
    pad: 2
    stride: 1
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }

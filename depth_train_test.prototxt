    kernel_size: 2
    stride: 2
  }
}


######################################
#### PROCESS: join R & L          ####
######################################
layer {
  name: "join_concatenate"
  type: "Concat"
  bottom: "pool3_L"
  bottom: "pool3_R"
  top: "joint_conc"
  concat_param {
    axis: 1
  }
}
layer {
  name: "join_InnerProduct"
  type: "InnerProduct"
  bottom: "joint_conc"
  top: "joint_fc"
  inner_product_param {
#    num_output: 1536
#    num_output: 8192   # warning about larger than INT_MAX
    num_output: 2048
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}
layer {
  name: "make2d"
  type: "Reshape"
  bottom: "joint_fc"
  top: "joint_reshape"
  reshape_param {
    shape {
      dim: 0
      dim: 1
      dim: 32
      dim: 64
    }
  }
}
layer {
  name: "upsample"
  type: "Deconvolution"
  bottom: "joint_reshape"
  top: "joint_upsamp"
  convolution_param{
    kernel_size: 4
    stride: 2
    num_output: 1
    group: 1
    pad: 1
    weight_filler: {
      type: "bilinear"
    }
    bias_term: false
  }
  param {
     lr_mult: 0
    decay_mult: 0
  }
}




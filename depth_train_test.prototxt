######################################
#### SILENCE OUTPUT: fake labels  ####
######################################
layer {
  name: "stfu_L"
  type: "Silence"
  bottom: "L_junk_label"
}
layer {
  name: "stfu_R"
  type: "Silence"
  bottom: "R_junk_label"
}
layer {
  name: "stfu_GT"
  type: "Silence"
  bottom: "GT_junk_label"
}


######################################
#### PROCESS: left leg            ####
######################################
layer {
  name: "conv1_L"
  type: "Convolution"
  bottom: "L_data"
  top: "conv1_L"
  param {
    name: "conv1_w"
    lr_mult: 1
  }
  param {
    name: "conv1_b"
    lr_mult: 2
  }
  convolution_param {
    num_output: 8
    kernel_size: 11
    pad: 5
    stride: 1
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}
layer {
  name: "relu1_L"
  type: "ReLU"
  bottom: "conv1_L"
  top: "conv1_L"
}
